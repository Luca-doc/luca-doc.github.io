// Standard GOV Colours - https://govuk-elements.herokuapp.com/colour/
$text-colour            = #0B0C0C
$link-colour            = #005EA5
$border-colour          = #BFC1C3;
$button-colour          = #00823B;
$focus-colour           = #FFBF47;
$secondary-text-colour  = #6F777B;
$link-hover-colour      = #2B8CC4;
$panel-colour           = #DEE0E2;
$green-hover            = #006435;
$page-colour            = #FFFFFF;
$link-visited-colour    = #4C2C92;
$highlight-colour       = #F8F8F8;

// Colors
$dark   = #000;
$mid    = #454a4c;
$light  = #fff;

$primary    = #005ea5;
$text       = #3c3c3b;
$links      = $primary;
$linkHover  = lighten($primary, 12%);
$linkFocus  = #ffbf47
$button     = #00823b;
$boxBg  = #ebedef;
$border = #9797978f;



// Default sizes
$spacing    = 1rem; // used for padding and margin
$baseFont   = 1rem;
$lineHeight = 1;

// Heading levels (names are abstracted)
$crust     = $baseFont * 3.6;
$mantle    = $baseFont * 2.4;
$outerCore = $baseFont * 1.9;
$innerCore = $baseFont * 1.6;

// Standard Text
$lead      = $mantle;
$bodyCopy  = $innerCore;
$smallCopy = $baseFont * 1.4;

// Rupture scales
rupture.scale       = 320px 410px 500px 740px 1020px 1280px 1700px;
rupture.scale-names = 'xxs' 'xs' 's' 'm' 'l' 'xl' 'xxl';

// Agency colours (things like banners, social media icons, borders)

$defaultAgencyColour = #005ea5; // default Gov blue
$socialLinks    = #005ea5;
