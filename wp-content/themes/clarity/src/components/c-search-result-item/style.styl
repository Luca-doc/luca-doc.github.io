// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-search-result-item {
  h1 {
    ff-title()
    margin: $spacing*3 0 0 0;
  }
  &__meta {
    color: $secondary-text-colour;
    margin-bottom: 4px;
    > span {
      display: block;
    }
    &__itemtype {
      font-weight: 300;
      color: $secondary-text-colour;
      margin-left: $spacing;
    }
    &__breadcrumbs {
      column(1)
      display: block;
      float: left;
      margin-bottom: 3px;
    }
    &__date {
      color: $secondary-text-colour;
    }
    &__description {
      margin: 0 0 $spacing;
    }
    +above(m) {
      span {
        display: block;
      }
    }

  }
}
