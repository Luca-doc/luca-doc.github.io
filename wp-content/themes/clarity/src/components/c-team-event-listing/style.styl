// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-team-event-listing {

  h1 {
    font-size: $outerCore;
  }

  border: 1px solid $border;
  margin-bottom: $spacing*2;
  padding: $spacing*1;

  .c-event-listing--date h2 {
    float: left;
    font-size: $innerCore;
    margin-right: $spacing*1;
  }

  .c-event-listing--time h2 {
    float: left;
    margin-right: $spacing*1;
  }

  .c-event-listing--location h2 {
    float: left;
    margin-right: $spacing*1;
  }

}
