@require '_toolkit';
// the 'main' layout

.l-main {
  padding: $spacing;
  +above('l') {
    padding: 0;
  }
  .l-full-page {
    column(1);
  }
  .l-primary {
    +above('m') {
      column(2/3);
    }
  }
  .l-secondary {
    +above('m') {
      column(1/3);
    }
  }

  .l-reverse-order {
    +above('m') {
      .l-primary {
        float:left;
      }
      .l-secondary {
        float:right;
        margin-right: 0;
      }
    }
  }
}


// The 'footer' layout
.c-footer {
  .l-primary {
    padding: $spacing*2 0;
    +above('m') {
      padding: $spacing*3 0;
      column(4/5);
    }
  }
  .l-secondary {
    +above('m') {
      padding: $spacing*2 0;
      column(1/5);
      padding: $spacing*3 0;
    }
  }
}
