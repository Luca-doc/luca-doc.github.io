// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-event-listing {
  border: 1px solid $border;
  margin-bottom: $spacing*2;
  padding: $spacing;

  a.c-event-listing--title {
    font-size: $outerCore;
    text-decoration: none;
    margin-bottom: 1rem;
    display: block;
  }

  &--date h2 {
    float: left;
    font-size: $innerCore;
    margin-right: $spacing;
  }

  &--time h2 {
    float: left;
    margin-right: $spacing;
  }

  &--location h2 {
    float: left;
    margin-right: $spacing;
  }
}
