// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit";

.c-blog-article-item {
  img {
    max-width: 100%;
    width: 100%;
    height: auto;
  }

  &--thumbnail,
  &__excerpt {
    display: block;
  }

  &__excerpt p {
    line-height: 1.4;
    font-size: $innerCore;
    font-weight: 400;
  }

  .c-homepage-blog-widget & {
    padding-bottom: $spacing;
    clearfix();
    +above('s') {
      column(1/3, $cycle: 3);
    }

    .c-blog-article-item--title {
      font-size: $outerCore;
      text-decoration: underline;
      margin-bottom: 1rem;
    }
  }
}
.c-article-byline__intro,
.c-article-byline__date {
  margin-bottom: 1rem;
}