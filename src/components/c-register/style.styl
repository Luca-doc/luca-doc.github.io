// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-register {
    label{
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }
    .message {
        margin-bottom: 20px;
        padding: 15px 60px;
        border: 3px solid #b10e1e;
    }
    input[type=text], input[type=email]{
        padding: 10px 6px;
        border: 1px solid #bfc1c3;
        width: 400px;
    }
    .button{
        position: relative;
        display: inline-block;
        padding: 8px 15px 5px;
        cursor: pointer;
        text-decoration: none;
        vertical-align: top;
        background-color: #00823b;
        box-shadow: 0 2px 0 #003518;
        color: #ffffff;
        font-size: 19px;
        line-height: 35px;
    }
}
