// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"


.c-events-item {
  margin-top: $spacing*3;
  position: relative;
  clearfix();
  display inline-block;
  width: 100%;
  h1 {
    ff-title();
    margin-bottom: $spacing;
    a {
      text-decoration: none;
    }
  }

  h1, &__time, &__location {
    display: block;
    padding-left: 30%;
  }

  &__time, &__location {
    clear:both;
    font-size: $smallCopy;
    h2 {
      span(1/3);
      font-weight: bold;
    }
    time,
    address {
    }
  }

  &-aside {
    margin-top: $spacing*3;
  }
}
  /* PARENT OVERIDES */

.c-events-item-list {
  column(1);
  float:left;
  display:block;
  margin:$spacing*2 0;
}

.c-events-item-homepage {
  +above('m') {
    column(1/2);
  }
  column(1);
  float:left;
  display:block;
  margin-bottom:$spacing*2;
}
