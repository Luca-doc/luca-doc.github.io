// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-left-hand-menu {
  margin-top: $spacing*2;

  ul {
    padding-left: 0;
    & ul {
      padding-left: 0;
    }
  }

  li {
		border-bottom: 1px solid #ccc !important;
    a {
      display: block;
      padding: 0;
    }

    &:last-of-type {
      border-bottom: 0;
    }

    &.page_item_has_children {
      > a {
				margin-left: -30px !important;
				margin-bottom: 5px !important;
        //@extend .o-arrow-toggle-link-after;
        &:after {
					display:none;
          // Flip the arrow to point up
          //transform: rotate(180deg);
          //transition transform .3s ease-in-out;
        }
        ul {
          // Negative margin applied to line up arrows for children with children.
          margin-right: 0;
        }
      }
      &.u-closed {
        // flip the arrow back when the item is closed
        a:after {
          //transform: rotate(0deg);
        }
      }
    }

    .children {
      max-height: 9999px // set a max-height this will never reach to ensure no cut-off
      //transition: padding .2s ease-in-out, max-height .8s ease-in-out;
			display:none;
    }
  }

  &__step_back {
    margin-bottom: 0;
  }

  .current_page_item {
    font-weight: bold;
  }
}
