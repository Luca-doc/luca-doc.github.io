// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"


.c-events-item-byline {
  header {
    overflow: hidden;
    margin: $spacing*3 $spacing*2;
  }

  time {
    display: block;
    border: 0;
  }

  h1 {
    font-size: $crust;
    ff-title();
    margin-bottom: $spacing*3;
  }

  &__time, &__location, &__date {
    column(1);
    float:left;
    display: block;
    margin-bottom: $spacing*1;
  }

  &__time, &__location, &__date {
    h2 {
      float:left;
      font-weight: bold;
      padding-right: $spacing*1;
    }
    time,
    address {
    }
  }

  &__details {
    clear: both;
  }
}
