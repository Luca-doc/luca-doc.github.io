{
    "name": "ministryofjustice/intranet",
    "type": "project",
    "description": "The Ministry of Justice Intranet",
    "config": {
        "preferred-install": "dist",
        "allow-plugins": {
            "johnpbloch/wordpress-core-installer": true,
            "koodimonni/composer-dropin-installer": true,
            "composer/installers": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "composer",
            "url": "https://composer.wp.dsd.io"
        },
        {
            "type": "composer",
            "url": "https://wp-languages.github.io"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ministryofjustice/dw-document-revisions"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ministryofjustice/dw-live-drafts"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ministryofjustice/dw-markdown"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ministryofjustice/like-button-for-wordpress"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ministryofjustice/notify-for-wordpress"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ministryofjustice/php-markdown-extra"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "composer/installers": "^1.4",
        "aws/aws-sdk-php": "^3.2",
        "vlucas/phpdotenv": "^2.6",
        "johnpbloch/wordpress": "^6.0",
        "koodimonni-language/core-en_gb": "^6.0",
        "oscarotero/env": "^1.2",
        "roots/wp-password-bcrypt": "^1.1",
        "wpackagist-plugin/classic-editor": "^1.0",
        "wpackagist-plugin/cms-tree-page-view": "^1.0",
        "wpackagist-plugin/co-authors-plus": "^3.0",
        "wpackagist-plugin/recently-edited-content-widget": "^0.3",
        "wpackagist-plugin/ewww-image-optimizer": "^6.0",
        "acf/advanced-custom-fields-pro": "^6.0",
        "wpackagist-plugin/query-monitor": "^3.10",
        "ministryofjustice/wp-rewrite-media-to-s3": "^0.3",
        "ministryofjustice/wp-moj-components": "^3.0",
        "wpackagist-plugin/elasticpress": "^4.0",
        "wpackagist-plugin/debug-bar":"^1.1",
        "wpackagist-plugin/debug-bar-elasticpress":"^2.0",
        "ministryofjustice/wp-moj-elasticsearch": "dev-develop/cleanup-poc",
        "ext-zlib": "*",
        "ext-posix": "*",
        "sentry/sdk": "^3.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0.2"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin",
                "wpackagist-plugin/ewww-image-optimizer"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "dropin-paths": {
            "web/app/languages/": [
                "vendor:koodimonni-language"
            ],
            "web/app/languages/plugins/": [
                "vendor:koodimonni-plugin-language"
            ],
            "web/app/languages/themes/": [
                "vendor:koodimonni-theme-language"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": [
            "vendor/bin/phpcs"
        ],
        "test-fix": [
            "vendor/bin/phpcbf"
        ]
    }
}
