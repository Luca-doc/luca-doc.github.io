// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit";

.c-article-item {
  padding-bottom: $spacing;
  border-bottom: 1px solid $border;
  margin-bottom: $spacing;
  a {
    text-decoration: none;
  }
  img {
    width: 100%;
    max-width: 100%;
    height: auto;
  }

  h1 {
    ff-title();
  }

  &__excerpt {
    p {
      color: $text;
      font-size: $smallCopy;
      line-height: $lineHeight*1.4;
      margin-bottom: 0;
    }
  }
  &__dateline {
    font-size: $smallCopy;
    color: $border;
  }

/*
  PARENT OVERRIDES
*/

  // Featured news
  .c-featured-news-list & {
    +above(m) {
      column(1/2, $cycle: 2);
    }
    border-bottom: 0;
  }

  // Regular news
  .c-news-list & {
    clearfix();
    +above(m) {
      column(1/2, $cycle: 2);
    }
    img {
      column(1/3);
    }
    &__excerpt {
      display: none;
    }
  }

  // Blog summary
  .c-blog-summary & {
    clearfix();
    h1 {
      font-size: $outerCore;
    }
    img {
      column(1/4);
    }
    &__excerpt {
      display: none;
    }
    &__byline {
      @extend .c-article-item__dateline;
      &:before {
        content: "|";
        padding: 0 $spacing;
      }
    }
  }

}
