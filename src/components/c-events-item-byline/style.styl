// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-events-item-byline {
  column(1);

  +above('m') {
  float:left;

  header {
    overflow: hidden;
  }

  time {
    display: block;
    border: 0;
  }

  h1 {
    font-size: $outerCore;
    ff-title();
    margin-bottom: $spacing*1;
  }

  &__time, &__location, &__date {
    column(1);
    float:left;
    display: block;
  }

  &__time, &__location, &__date {
    h2 {
      float:left;
      font-weight: bold;
      padding-right: $spacing*1;
    }
    time,
    address {
    }
  }

  &__details {
    clear: both;
  }
}

/* PARENT OVERIDES */

.c-events-item-list & {
  column(1/2);
  }

  h2 {
    font-size: $innerCore;
  }

  header {
    margin-top: 0;
  }

  &__time, &__location, &__date {
    h2 {
      float:left;
      font-weight: bold;
      padding-right: $spacing*1;
    }
    time,
    address {
    }
  }
}

.c-events-item-homepage & {
  column(1);
  h1 {
    font-size: $innerCore;
  }
}
