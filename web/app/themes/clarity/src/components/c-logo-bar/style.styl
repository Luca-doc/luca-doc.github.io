// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-logo-bar {
  position: relative;
  background-color: $dark;
  padding: $spacing $spacing $spacing;

  a {
    text-decoration: none;
  }

  img {
    height: $spacing*2.6;
    position: relative;
    display: block;
    float: left;
  }
  .agency-title {
    color: white;
    font-size: 26px;
    font-weight: 400;
    line-height: 29px;
  }

  &__switch {
    color: $light;
    display block;
    padding: $spacing 0;
    text-decoration: none;
    +above(m) {
      padding: 5px 0 0 0;
      text-align: right;
    }
  }

  .u-wrapper {
  }

  &__stack--left {
    float:left;
  }

  &__stack--right {
    float:right;
  }

}
