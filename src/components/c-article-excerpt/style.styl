// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-article-excerpt {

  p {
    color: $text;
    font-size: $outerCore;
    line-height: $lineHeight*1.4;
    font-weight: 700;
  }

// Parent overrides

  .c-article-item & {
    p {
      font-size: $smallCopy;
      margin-bottom: 0;
    }
  }

  .c-news-article & {
    margin: 0;
  }
}
