@require '_toolkit';
// the 'main' layout

.l-main {
  padding: $spacing;
  +above('l') {
    padding: 0;
  }
  .l-full-page {
    column(1);
  }
  .l-primary {
    +above('m') {
      column(2/3);
    }
  }
  .l-secondary {
    +above('m') {
      column(1/3);
    }
  }

  .campaign-container {
    display: inline-block;
    position: relative;
    width: 100%;
    margin: 20px auto;
    &:first-child {
      margin: 0 auto 20px auto;
    }
    .o-title{
      line-height: 30px;
    }
  }

  .l-half-section {
    +above('m') {
      span(1/2, $gutter: .5);
    }
  }

  .l-reverse-order {
    +above('m') {
      .l-primary {
        float:left;
      }
      .l-secondary {
        float:right;
        margin-right: 0;
      }
    }
  }
}


// The 'footer' layout
.c-footer {
  .l-primary {
    padding: $spacing*2 0;
    +above('m') {
      padding: $spacing*3 0;
      column(4/5);
    }
  }
  .l-secondary {
    +above('m') {
      padding: $spacing*2 0;
      column(1/5);
      padding: $spacing*3 0;
    }
  }
}
