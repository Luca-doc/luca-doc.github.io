// include the toolkit (a suite of variables, classes and mixins)
@require "../../globals/css/_toolkit"

.c-feedback-container{
  
  .o-arrow-toggle-link{
    &::before{
      display: none;
    }
  }

  .c-feedback-form {
    clear:both;
    display:none;
    margin: $spacing*2;
    +above(m) {
      column(1/2);
    }
      // this button requires 1rem of spacing above it.
    .o-button {
      margin: $spacing 0;
    }
  }

  .c-feedback__prompt {
    background-color: rgb(29, 112, 184);
    color: rgb(255, 255, 255);
    outline: 0px;
    
    .feedback__prompt-success {
      font-size: 16px;
      line-height: 1.25;
    }
  }
}
